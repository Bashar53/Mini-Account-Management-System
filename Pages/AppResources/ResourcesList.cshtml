@page
@model Mini_Account_Management_System.Pages.AppResouces.ResourcesListModel
@{
    ViewData["Title"] = "Application Resources";
}

<h2>Application Resources</h2>

<form method="post">
    <input type="hidden" asp-for="Input.AppResourceId" />
    <div class="mb-2">
        <label asp-for="Input.ModelName"></label>
        <input asp-for="Input.ModelName" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Input.DisplayName"></label>
        <input asp-for="Input.DisplayName" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Input.Url"></label>
        <input asp-for="Input.Url" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Input.ParentId"></label>
        <input asp-for="Input.ParentId" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Input.MenuOrder"></label>
        <input asp-for="Input.MenuOrder" class="form-control" />
    </div>
    <button type="submit" asp-page-handler="Save" class="btn btn-primary">Save</button>
</form>

<hr />

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Parent ID</th>
            <th>Order</th>
            <th>Model Name</th>
            <th>Display Name</th>
            <th>URL</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model.Resources)
        {
            <tr>
                <td>@res.AppResourceId</td>
                <td>@res.ParentId</td>
                <td>@res.MenuOrder</td>
                <td>@res.ModelName</td>
                <td>@res.DisplayName</td>
                <td>@res.Url</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="id" value="@res.AppResourceId" />
                        <button type="submit" asp-page-handler="Edit" class="btn btn-sm btn-warning">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
