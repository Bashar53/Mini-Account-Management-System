@page "/AccountsChart/Upsert"
@model Mini_Account_Management_System.Pages.AccountsChart.UpsertModel
@{
    ViewData["Title"] = Model.Input.AccountId == 0 ? "Create Account" : "Edit Account";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.AccountName" class="form-label"></label>
        <input asp-for="Input.AccountName" class="form-control" />
        <span asp-validation-for="Input.AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ParentId" class="form-label">Parent Account (optional)</label>
        <select asp-for="Input.ParentId" class="form-select" asp-items="Model.ParentOptions">
            <option value="">-- No Parent --</option>
        </select>
        <span asp-validation-for="Input.ParentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Input.AccountId == 0 ? "Create" : "Update")
    </button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
